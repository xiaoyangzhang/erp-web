<?xml version="1.0" encoding="UTF-8"?>
<config>
	<group name="dubbo">
		<property name="zk.address" defaultValue="192.168.1.202:2181"			description="dubbo注册的zookeeper地址" />
		<property name="zk.port" defaultValue="-1" description="dubbo服务使用的端口号" />
		<property name="dubbo.timeout" defaultValue="5000"			description="dubbo服务的默认超时时间" />
		<property name="dubbo.version" defaultValue="LATEST"			description="dubbo的版本号" />
	</group>

	<group name="webView">
		<property name="web.view.index" defaultValue="/index"			description=" " />
		<property name="web.view.prefix" defaultValue="/WEB-INF/views/"			description="" />
		<property name="web.view.suffix" defaultValue=".jsp"			description="" />
		<property name="web.maxUploadSize" defaultValue="10485760"			description="" />
	</group>

	<group name="img">
		<property name="IMG_SERVER_URL" defaultValue="http://192.168.1.88/"	/>
		<property name="IMAGES_CUT_SERVER_URL" defaultValue="http://192.168.1.93:8001/" />
		<property name="IMAGES_WITH_WATER" defaultValue="http://192.168.1.81/p0/" />
		<property name="IMAGES_SERVER_IMAGES_340" defaultValue="http://192.168.1.81/p2/" />
		<property name="IMAGES_SERVER_IMAGES_200" defaultValue="http://192.168.1.81/p1/" />
	</group>
	
	<group name="other">
		<property name="page.pageSize" defaultValue="15" description="每页page" />
		<property name="sys.code"	defaultValue="YIHG-ERP"			description="数据库链接url" />
		<property name="default_encoding" defaultValue="UTF-8"	/>
		<property name="template_update_delay" defaultValue="10800"	/>
	</group>
	
	<script>
		<generate template="config.properties.vm" destfile="classpath*:/application.properties"
				  charset="UTF-8" />
		<generate template="logback.xml.vm" destfile="WEB-INF/logback.xml"
				  charset="UTF-8" />
		<generate template="web.xml.vm" destfile="WEB-INF/web.xml"
				  charset="UTF-8" />
	</script>
</config>

